<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd"
             version="2.2">
    <persistence-unit name="default">
        <class>com.the.hugging.team.entities.Activity</class>
        <class>com.the.hugging.team.entities.ActivityType</class>
        <class>com.the.hugging.team.entities.CashRegister</class>
        <class>com.the.hugging.team.entities.Delivery</class>
        <class>com.the.hugging.team.entities.Invoice</class>
        <class>com.the.hugging.team.entities.Permission</class>
        <class>com.the.hugging.team.entities.ProductCategory</class>
        <class>com.the.hugging.team.entities.ProductQuantityType</class>
        <class>com.the.hugging.team.entities.Product</class>
        <class>com.the.hugging.team.entities.Role</class>
        <class>com.the.hugging.team.entities.Room</class>
        <class>com.the.hugging.team.entities.Sale</class>
        <class>com.the.hugging.team.entities.Shelf</class>
        <class>com.the.hugging.team.entities.TransactionType</class>
        <class>com.the.hugging.team.entities.Transaction</class>
        <class>com.the.hugging.team.entities.User</class>
        <class>com.the.hugging.team.entities.SaleProduct</class>
        <class>com.the.hugging.team.entities.DeliveryProduct</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/cella"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.cj.jdbc.Driver"/>
            <property name="hibernate.connection.username" value="root"/>
            <property name="hibernate.show_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
