<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import java.lang.String?>
<AnchorPane prefHeight="640.0" prefWidth="1080.0" xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.the.hugging.team.controllers.wizards.PayController">
    <AnchorPane fx:id="payAnchor" prefHeight="200.0" prefWidth="200.0" stylesheets="@../../../../assets/css/wizard.css"
                AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                AnchorPane.topAnchor="0.0">
        <Pane fx:id="paymentInformationPane" layoutX="354.0" layoutY="130.0" prefHeight="380.0" prefWidth="370.0"
              styleClass="labelPane">
            <Label layoutX="80.0" layoutY="50.0" styleClass="font-regular" text="PAYMENT INFORMATION">
                <font>
                    <Font size="18.0"/>
                </font>
            </Label>
            <Pane layoutX="46.0" layoutY="100.0" prefHeight="35.0" prefWidth="280.0" styleClass="labelPane">
                <Label layoutX="25.0" layoutY="9.0" prefHeight="20.0" prefWidth="73.0" styleClass="font-regular"
                       text="Base price" textAlignment="CENTER">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
                <Separator layoutX="105.0" layoutY="5.0" orientation="VERTICAL" prefHeight="25.0" prefWidth="2.0"/>
                <TextField fx:id="basePriceField" editable="false" layoutX="120.0" layoutY="5.0" prefHeight="25.0"
                           prefWidth="140.0" styleClass="font-regular" text="249,99"/>
            </Pane>
            <Button fx:id="paymentButton" layoutX="110.0" layoutY="300.0" mnemonicParsing="false"
                    onAction="#paymentButtonClick" prefWidth="150.0" style="-fx-background-color: #219ebc;"
                    text="Finalize payment">
                <font>
                    <Font size="14.0"/>
                </font>
                <styleClass>
                    <String fx:value="font-regular"/>
                </styleClass>
            </Button>
            <Pane layoutX="45.0" layoutY="145.0" prefHeight="35.0" prefWidth="280.0" styleClass="labelPane">
                <Label layoutX="25.0" layoutY="9.0" styleClass="font-regular" text="DDS %" textAlignment="CENTER">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
                <Separator layoutX="105.0" layoutY="5.0" orientation="VERTICAL" prefHeight="25.0" prefWidth="2.0"/>
                <TextField fx:id="ddsPercentageField" editable="false" layoutX="120.0" layoutY="5.0" prefHeight="25.0"
                           prefWidth="140.0" styleClass="font-regular" text="20"/>
            </Pane>
            <Pane layoutX="45.0" layoutY="190.0" prefHeight="35.0" prefWidth="280.0" styleClass="labelPane">
                <Label layoutX="25.0" layoutY="9.0" styleClass="font-regular" text="DDS value" textAlignment="CENTER">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
                <Separator layoutX="105.0" layoutY="5.0" orientation="VERTICAL" prefHeight="25.0" prefWidth="2.0"/>
                <TextField fx:id="ddsValueField" editable="false" layoutX="120.0" layoutY="5.0" prefHeight="25.0"
                           prefWidth="140.0" styleClass="font-regular" text="47,99"/>
            </Pane>
            <Pane layoutX="45.0" layoutY="235.0" prefHeight="35.0" prefWidth="280.0" styleClass="labelPane">
                <Label layoutX="25.0" layoutY="9.0" styleClass="font-regular" text="Final price" textAlignment="CENTER">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Label>
                <Separator layoutX="105.0" layoutY="5.0" orientation="VERTICAL" prefHeight="25.0" prefWidth="2.0"/>
                <TextField fx:id="finalPriceField" editable="false" layoutX="120.0" layoutY="5.0" prefHeight="25.0"
                           prefWidth="140.0" styleClass="font-regular" text="286,94"/>
            </Pane>
        </Pane>
    </AnchorPane>
</AnchorPane>
