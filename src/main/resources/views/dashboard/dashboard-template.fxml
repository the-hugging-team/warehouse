<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" minHeight="-Infinity" minWidth="-Infinity" prefHeight="720.0"
            prefWidth="1280.0" stylesheets="@../../assets/css/dashboard.css"
            xmlns="http://javafx.com/javafx/17" fx:controller="com.the.hugging.team.controllers.DashboardTemplate">
    <Pane fx:id="profile" prefHeight="100.0" prefWidth="200.0">
        <Label id="role" layoutX="10.0" layoutY="50.0" prefHeight="30.0" prefWidth="90.0" styleClass="font-regular"
               text="Admin">
            <font>
                <Font name="Arial" size="15.0"/>
            </font>
        </Label>
        <Label id="userNames" layoutX="10.0" layoutY="10.0" prefHeight="40.0" prefWidth="180.0"
               styleClass="font-extra-bold" text="John Doe">
            <font>
                <Font name="Arial Bold" size="20.0"/>
            </font>
        </Label>
    </Pane>
    <VBox fx:id="menu" layoutY="100.0" prefHeight="460.0" prefWidth="200.0" styleClass="menu"
          AnchorPane.bottomAnchor="60.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="100.0">
        <Button fx:id="homeButton" mnemonicParsing="false" onAction="#homeClick" prefHeight="25.0" prefWidth="200.0"
                text="Home">
            <font>
                <Font name="Open Sans Regular" size="18.0"/>
            </font>
            <graphic>
                <FontAwesomeIconView glyphName="HOME" size="25" styleClass="menu-icon"/>
            </graphic>
            <styleClass>
                <String fx:value="menu-button"/>
                <String fx:value="font-regular"/>
            </styleClass>
        </Button>
        <Button fx:id="usersButton" alignment="BOTTOM_LEFT" mnemonicParsing="false" onAction="#usersClick"
                prefHeight="25.0" prefWidth="200.0" text="Users-Admin">
            <font>
                <Font name="Open Sans Light" size="18.0"/>
            </font>
            <graphic>
                <FontAwesomeIconView glyphName="USERS" size="20" styleClass="menu-icon"/>
            </graphic>
            <styleClass>
                <String fx:value="menu-button"/>
                <String fx:value="font-regular"/>
            </styleClass>
        </Button>
        <Button fx:id="clientsButton" alignment="BOTTOM_LEFT" mnemonicParsing="false" onAction="#clientsClick"
                prefHeight="25.0" prefWidth="200.0" text="Clients">
            <font>
                <Font name="Open Sans ExtraBold" size="18.0"/>
            </font>
            <graphic>
                <FontAwesomeIconView glyphName="USER" size="25" styleClass="menu-icon"/>
            </graphic>
            <styleClass>
                <String fx:value="menu-button"/>
                <String fx:value="font-regular"/>
            </styleClass>
        </Button>
        <Button fx:id="suppliersButton" alignment="BOTTOM_LEFT" mnemonicParsing="false" prefHeight="25.0"
                prefWidth="283.0" text="Suppliers">
            <font>
                <Font size="18.0"/>
            </font>
            <graphic>
                <FontAwesomeIconView glyphName="TRUCK" size="25" styleClass="menu-icon"/>
            </graphic>
            <styleClass>
                <String fx:value="menu-button"/>
                <String fx:value="font-regular"/>
            </styleClass>
        </Button>
        <Button fx:id="cashRegistersButton" alignment="BOTTOM_LEFT" mnemonicParsing="false" prefHeight="25.0"
                prefWidth="186.0" text="Cash Registers">
            <font>
                <Font size="18.0"/>
            </font>
            <graphic>
                <FontAwesomeIconView glyphName="MONEY" size="25" styleClass="menu-icon"/>
            </graphic>
            <styleClass>
                <String fx:value="menu-button"/>
                <String fx:value="font-regular"/>
            </styleClass>
        </Button>
        <Button fx:id="storageButton" alignment="BOTTOM_LEFT" mnemonicParsing="false" prefHeight="50.0"
                prefWidth="200.0" text="Storage">
            <font>
                <Font size="18.0"/>
            </font>
            <graphic>
                <FontAwesomeIconView glyphName="ARCHIVE" size="25" styleClass="menu-icon"/>
            </graphic>
            <styleClass>
                <String fx:value="menu-button"/>
                <String fx:value="font-regular"/>
            </styleClass>
        </Button>
        <HBox prefHeight="100.0" prefWidth="200.0" styleClass="menu-button-dropdown-container">
            <Button fx:id="productsButton" alignment="BOTTOM_LEFT" contentDisplay="RIGHT" mnemonicParsing="false"
                    onAction="#productsClick" prefHeight="35.0" prefWidth="200.0" text="Products">
                <font>
                    <Font size="18.0"/>
                </font>
                <styleClass>
                    <String fx:value="menu-button-dropdown"/>
                    <String fx:value="font-regular"/>
                </styleClass>
            </Button>
            <Button fx:id="productsArrow" alignment="CENTER" mnemonicParsing="false" onAction="#productsClick"
                    styleClass="menu-button-dropdown-arrow">
                <graphic>
                    <FontAwesomeIconView glyphName="ANGLE_DOWN" styleClass="menu-icon"/>
                </graphic>
            </Button>
        </HBox>
        <HBox prefHeight="100.0" prefWidth="200.0" styleClass="menu-button-dropdown-container">
            <Button fx:id="reportsButton" alignment="BOTTOM_LEFT" mnemonicParsing="false" onAction="#reportsClick"
                    prefHeight="50.0" prefWidth="200.0" text="Reports">
                <font>
                    <Font size="18.0"/>
                </font>
                <graphic>
                    <FontAwesomeIconView glyphName="BAR_CHART" size="25" styleClass="menu-icon"/>
                </graphic>
                <styleClass>
                    <String fx:value="menu-button-dropdown"/>
                    <String fx:value="font-regular"/>
                </styleClass>
            </Button>
            <Button fx:id="reportsArrow" alignment="CENTER" mnemonicParsing="false" onAction="#reportsClick"
                    styleClass="menu-button-dropdown-arrow">
                <graphic>
                    <FontAwesomeIconView glyphName="ANGLE_DOWN" styleClass="menu-icon"/>
                </graphic>
            </Button>
        </HBox>
    </VBox>
    <HBox layoutY="560.0" prefHeight="60.0" prefWidth="200.0" styleClass="menu2" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0">
        <Button mnemonicParsing="false" onAction="#logout" prefHeight="50.0" prefWidth="50.0" styleClass="menu2-button">
            <HBox.margin>
                <Insets left="5.0" top="5.0"/>
            </HBox.margin>
            <graphic>
                <FontAwesomeIconView glyphName="SIGN_OUT" size="20" styleClass="menu-icon"/>
            </graphic>
        </Button>
        <Button mnemonicParsing="false" prefHeight="50.0" prefWidth="50.0" styleClass="menu2-button">
            <HBox.margin>
                <Insets left="90.0" top="5.0"/>
            </HBox.margin>
            <graphic>
                <FontAwesomeIconView glyphName="BELL" size="20" styleClass="menu-icon"/>
            </graphic>
        </Button>
    </HBox>
    <AnchorPane fx:id="workspace" layoutX="200.0" prefHeight="720.0" prefWidth="1080.0"
                style="-fx-background-color: #e5e5e5;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="200.0"
                AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
    </AnchorPane>
</AnchorPane>
