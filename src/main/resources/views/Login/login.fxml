<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:id="anchor" prefHeight="620.0" prefWidth="930.0"
            stylesheets="@../../assets/css/login.css" xmlns="http://javafx.com/javafx/17"
            fx:controller="com.the.hugging.team.controllers.LoginController">
    <Pane fx:id="backgroundpane" prefHeight="620.0" prefWidth="930.0" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
    </Pane>
    <Pane fx:id="formpane" maxHeight="330.0" prefHeight="330.0" prefWidth="480.0" translateX="225.0" translateY="145.0">
        <TextField fx:id="usernamefield" alignment="CENTER" layoutX="130.0" layoutY="175.0" opacity="0.6"
                   prefHeight="35.0" prefWidth="220.0" promptText="Username">
            <font>
                <Font name="System Bold Italic" size="16.0"/>
            </font>
        </TextField>
        <TextField fx:id="passwordfield" alignment="CENTER" layoutX="130.0" layoutY="220.0" opacity="0.6"
                   prefHeight="35.0" prefWidth="220.0" promptText="Password">
            <font>
                <Font name="System Bold Italic" size="16.0"/>
            </font>
        </TextField>
        <Button fx:id="loginbutton" alignment="CENTER" contentDisplay="RIGHT" layoutX="191.0" layoutY="270.0"
                mnemonicParsing="false" onAction="#login" opacity="0.7" prefHeight="20.0" prefWidth="100.0"
                text="Login">
            <font>
                <Font name="System Bold Italic" size="15.0"/>
            </font>
        </Button>
       <ImageView fitHeight="220.0" fitWidth="350.0" layoutX="65.0" layoutY="-15.0" pickOnBounds="true"
                  preserveRatio="true">
          <Image url="@../../assets/images/logos/cellablack.png"/>
       </ImageView>
    </Pane>
</AnchorPane>
